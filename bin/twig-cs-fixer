#!/usr/bin/env php
<?php

declare(strict_types = 1);

use Kellerkinder\TwigCsFixer\Application;

$possibleFiles = [__DIR__.'/../../autoload.php', __DIR__.'/../autoload.php', __DIR__.'/vendor/autoload.php', __DIR__ . '/../vendor/autoload.php'];
$targetFile = null;

foreach ($possibleFiles as $possibleFile) {
    if(file_exists($possibleFile)) {
        $targetFile = $possibleFile;

        break;
    }
}

if ($targetFile === null) {
    echo PHP_EOL . 'No composer autoload file found';

    exit(255);
}

require_once $targetFile;

try {
    (new Application())->run();
} catch (\Throwable $t) {
    echo PHP_EOL . sprintf('ERROR[%s]: %s @ %s:%s', $t->getCode(), $t->getMessage(), $t->getFile(), $t->getLine()) . PHP_EOL;
}
